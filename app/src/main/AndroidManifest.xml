<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pk.minitrello">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.pk.minitrello.activities.ShowBoardScreen" />
        <activity android:name="com.example.pk.minitrello.activities.CreateBoardScreen" />
        <activity android:name="com.example.pk.minitrello.activities.CreateEntryScreen" />
        <activity android:name="com.example.pk.minitrello.activities.ShowEntryScreen" />
        <activity android:name="com.example.pk.minitrello.activities.ShowCardScreen"></activity>
    </application>

</manifest>
