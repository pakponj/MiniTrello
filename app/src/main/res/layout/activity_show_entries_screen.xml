<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pk.minitrello.activities.ShowEntryScreen">

    <TextView
        android:id="@+id/entry_board_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Board name"
        android:gravity="center"
        android:textSize="10pt"
        />

    <TextView
        android:id="@+id/entry_board_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:gravity="center"
        android:layout_below="@+id/entry_board_name"
        />

    <ListView
        android:id="@+id/entry_list"
        android:layout_below="@+id/entry_board_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/to_create_entry_button"></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Current Board"
        android:id="@+id/delete_current_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/to_create_entry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_current_button"
        android:layout_alignEnd="@+id/entry_list"
        android:layout_alignParentStart="true"
        android:text="Create New Entry"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All Entries"
        android:id="@+id/delete_all_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
